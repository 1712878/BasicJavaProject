<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="resources.ThamGiaDeTai" table="ThamGiaDeTai" schema="nttuanco_Test">
        <composite-id mapped="true" class="resources.ThamGiaDeTaiPK">
            <key-property name="maGiaoVien">
                <column name="MaGiaoVien" sql-type="char(5)" length="5"/>
            </key-property>
            <key-property name="maDeTai">
                <column name="MaDeTai" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="soThuTu">
                <column name="SoThuTu" sql-type="int(11)"/>
            </key-property>
        </composite-id>
        <property name="phuCap">
            <column name="PhuCap" sql-type="float" precision="-1" not-null="true"/>
        </property>
        <property name="ketQua">
            <column name="KetQua" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <many-to-one name="giaoVienByMaGiaoVien" class="resources.GiaoVien">
            <column name="MaGiaoVien"/>
        </many-to-one>
        <many-to-one name="congViec" class="resources.CongViec">
            <column name="MaDeTai"/>
            <column name="SoThuTu"/>
        </many-to-one>
    </class>
</hibernate-mapping>