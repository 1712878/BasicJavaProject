<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="resources.BoMon" table="BoMon" schema="nttuanco_Test">
        <id name="maBoMon">
            <column name="MaBoMon" sql-type="char(5)" length="5"/>
        </id>
        <property name="tenBoMon">
            <column name="TenBoMon" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="phong">
            <column name="Phong" sql-type="char(5)" length="5" not-null="true"/>
        </property>
        <property name="dienThoai">
            <column name="DienThoai" sql-type="char(12)" length="12" not-null="true"/>
        </property>
        <property name="truongBoMon">
            <column name="TruongBoMon" sql-type="char(5)" length="5" not-null="true"/>
        </property>
        <property name="maKhoa">
            <column name="MaKhoa" sql-type="char(4)" length="4" not-null="true"/>
        </property>
        <property name="ngayNhanChuc">
            <column name="NgayNhanChuc" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="giaoVienByTruongBoMon" class="resources.GiaoVien">
            <column name="TruongBoMon" not-null="true"/>
        </many-to-one>
        <many-to-one name="khoaByMaKhoa" class="resources.Khoa">
            <column name="MaKhoa" not-null="true"/>
        </many-to-one>
        <set name="giaoViensByMaBoMon" inverse="true">
            <key>
                <column name="MaBoMon" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="resources.GiaoVien"/>
        </set>
    </class>
</hibernate-mapping>