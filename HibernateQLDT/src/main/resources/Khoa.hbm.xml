<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="resources.Khoa" table="Khoa" schema="nttuanco_Test">
        <id name="maKhoa">
            <column name="MaKhoa" sql-type="char(4)" length="4"/>
        </id>
        <property name="tenKhoa">
            <column name="TenKhoa" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="namThanhLap">
            <column name="NamThanhLap" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="phong">
            <column name="Phong" sql-type="char(5)" length="5" not-null="true"/>
        </property>
        <property name="dienThoai">
            <column name="DienThoai" sql-type="char(12)" length="12" not-null="true"/>
        </property>
        <property name="truongKhoa">
            <column name="TruongKhoa" sql-type="char(5)" length="5" not-null="true"/>
        </property>
        <property name="ngayNhanChuc">
            <column name="NgayNhanChuc" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="giaoVienByTruongKhoa" class="resources.GiaoVien">
            <column name="TruongKhoa" not-null="true"/>
        </many-to-one>
        <set name="boMonsByMaKhoa" inverse="true">
            <key>
                <column name="MaKhoa" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="resources.BoMon"/>
        </set>
    </class>
</hibernate-mapping>