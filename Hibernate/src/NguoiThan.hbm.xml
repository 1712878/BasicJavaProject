<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="nttuan.codes.Model.NguoiThan" table="NguoiThan" schema="nttuanco_Test">
        <composite-id mapped="true" class="nttuan.codes.Model.NguoiThanPK">
            <key-property name="maGiaoVien">
                <column name="MaGiaoVien" sql-type="char(5)" length="5"/>
            </key-property>
            <key-property name="ten">
                <column name="Ten" sql-type="varchar(20)" length="20"/>
            </key-property>
        </composite-id>
        <property name="ngaySinh">
            <column name="NgaySinh" sql-type="datetime" not-null="true"/>
        </property>
        <property name="phai">
            <column name="Phai" sql-type="char(3)" length="3" not-null="true"/>
        </property>
        <many-to-one name="giaoVienByMaGiaoVien" class="nttuan.codes.Model.GiaoVien">
            <column name="MaGiaoVien"/>
        </many-to-one>
    </class>
</hibernate-mapping>