<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="nttuan.codes.Model.DeTai" table="DeTai" schema="nttuanco_Test">
        <id name="maDeTai">
            <column name="MaDeTai" sql-type="char(3)" length="3"/>
        </id>
        <property name="tenDeTai">
            <column name="TenDeTai" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="capQuanLy">
            <column name="CapQuanLy" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="kinhPhi">
            <column name="KinhPhi" sql-type="float" precision="-1" not-null="true"/>
        </property>
        <property name="ngayBatDau">
            <column name="NgayBatDau" sql-type="datetime" not-null="true"/>
        </property>
        <property name="ngayKetThuc">
            <column name="NgayKetThuc" sql-type="datetime" not-null="true"/>
        </property>
        <property name="maChuDe">
            <column name="MaChuDe" sql-type="char(4)" length="4" not-null="true"/>
        </property>
        <property name="giaoVienChuNhiemDeTai">
            <column name="GiaoVienChuNhiemDeTai" sql-type="char(5)" length="5" not-null="true"/>
        </property>
        <many-to-one name="chuDeByMaChuDe" class="nttuan.codes.Model.ChuDe">
            <column name="MaChuDe" not-null="true"/>
        </many-to-one>
        <many-to-one name="giaoVienByGiaoVienChuNhiemDeTai" class="nttuan.codes.Model.GiaoVien">
            <column name="GiaoVienChuNhiemDeTai" not-null="true"/>
        </many-to-one>
        <set name="congViecsByMaDeTai" inverse="true">
            <key>
                <column name="MaDeTai"/>
            </key>
            <one-to-many not-found="ignore" class="nttuan.codes.Model.CongViec"/>
        </set>
    </class>
</hibernate-mapping>