<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.GiaoVien" table="GiaoVien" schema="DeTai">
        <id name="maGiaoVien">
            <column name="MaGiaoVien" sql-type="varchar(10)" length="10"/>
        </id>
        <property name="tenGiaoVien">
            <column name="TenGiaoVien" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <set name="thamGiaDeTaisByMaGiaoVien" inverse="true">
            <key>
                <column name="MaGiaoVien"/>
            </key>
            <one-to-many not-found="ignore" class="pojo.ThamGiaDeTai"/>
        </set>
    </class>
</hibernate-mapping>