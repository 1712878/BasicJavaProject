<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.DanhMuc" table="DanhMuc" schema="nttuanco_Sach">
        <id name="maDanhMuc">
            <column name="MaDanhMuc" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="tenDanhMuc">
            <column name="TenDanhMuc" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <set name="sachesByMaDanhMuc" inverse="true">
            <key>
                <column name="MaDM" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="pojo.Sach"/>
        </set>
    </class>
</hibernate-mapping>