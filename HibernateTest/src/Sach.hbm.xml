<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Sach" table="Sach" schema="nttuanco_Sach">
        <id name="maSach">
            <column name="MaSach" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="tenSach">
            <column name="TenSach" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="tacGia">
            <column name="TacGia" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="giaBan">
            <column name="GiaBan" sql-type="double" precision="-1" not-null="true"/>
        </property>
        <property name="soLuong">
            <column name="SoLuong" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="maDm">
            <column name="MaDM" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="hinhAnh">
            <column name="HinhAnh" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <many-to-one name="danhMucByMaDm" class="pojo.DanhMuc" lazy="false" fetch="join" cascade="all" insert="false" update="false">
            <column name="MaDM" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>